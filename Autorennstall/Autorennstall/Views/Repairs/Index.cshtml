@model IEnumerable<Autorennstall.Models.Repair>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Neue Reparatur anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Driver.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Driver.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepairType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Einzelteile", "AddSpareparts", new { id = item.RepairID }) |
            @Html.ActionLink("Editieren", "Edit", new { id = item.RepairID }) |
            @Html.ActionLink("Löschen", "Delete", new { id = item.RepairID })
        </td>
    </tr>
}

</table>
