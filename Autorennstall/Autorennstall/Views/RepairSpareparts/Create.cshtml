@model Autorennstall.Models.RepairSparepart

@{
    ViewBag.Title = "Create";
}

<h2>Einzelteil hinzufügen</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="RepairID" value="@ViewBag.RepairID"/>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.SparepartID, "Einzelteil", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SparepartID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SparepartID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Hinzufügen" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
